<% content_for :head do %>
  <title>List |Tweeter- Clone</title>
  <link rel="stylesheet" href="list.scss">
<% end %>
<h1>List des tweets</h1>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>
 
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.content %></td>
        <td><%= link_to "Show" , post_path(post.id) %></td>
        <td><%= link_to "Edit" , edit_post_path(post.id) %></td>
        <td><%= link_to "Destroy" , post ,method: "delete", data: {confirm: "Etes vous sur de vouloir supprimer?"} %> </td>
      </tr>
    <% end %>
  </tbody>
</table>
 
<br>