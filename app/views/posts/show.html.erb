<h1>Visualiser le contenu du tweet</h1>
<div class="content-tweet"> 
    <p> Contenu: <%= @post.content %> </p>       
    <%= link_to "Back", posts_path %>
    <%= link_to "Edit", edit_post_path %>
    <% flash.each do |key, value| %>
    <%= content_tag(:div,value,class:key) %>
    <br>
    <% end %>
</div>

